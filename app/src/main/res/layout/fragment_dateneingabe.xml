<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="386dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/vorname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Vorname"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/alter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Alter"
            android:inputType="number" />

        <Switch
            android:id="@+id/nap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Power Napst du?" />

        <Switch
            android:id="@+id/fruehstueck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frühstückst du?" />

        <EditText
            android:id="@+id/aufstehzeit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Aufstehzeit"
            android:inputType="time" />

        <EditText
            android:id="@+id/routine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Dauer der Morgenroutine"
            android:inputType="time" />

        <EditText
            android:id="@+id/arbeitszeit"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Dauer der Arbeitszeit"
            android:inputType="time" />

        <Button
            android:id="@+id/abschicken"
            android:layout_width="136dp"
            android:layout_height="83dp"
            android:layout_marginStart="144dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="157dp"
            android:layout_marginBottom="250dp"
            android:text="Abschicken" />


    </LinearLayout>

</RelativeLayout>