<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/background_light">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="377dp"
        android:layout_height="651dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eingabe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="25"
            android:text="Dateneingabe"
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/vorname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Vorname"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            android:gravity="center"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/alter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Alter"
            android:textSize="20dp"
            android:gravity="center"
            android:inputType="number" />

        <Switch
            android:id="@+id/nap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Power Napst du?" />

        <Switch
            android:id="@+id/fruehstueck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Frühstückst du?" />

        <TextView
            android:id="@+id/aufstehzeit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Aufstehzeit:"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:inputType="time" />

        <Button
            android:id="@+id/aufstehzeitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:text="Aufstehzeit wählen"
            android:textAlignment="center"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="#FFFFFFFF" />

        <TextView
            android:id="@+id/routine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Dauer der Morgenroutine:"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:inputType="time" />

        <Button
            android:id="@+id/routineButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:text="Dauer der Routine wählen"
            android:textAlignment="center"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="#FFFFFFFF" />

        <TextView
            android:id="@+id/arbeitszeit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Dauer der Arbeitszeit:"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:inputType="time" />

        <Button
            android:id="@+id/arbeitszeitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:text="Dauer der Arbeitszeit wählen"
            android:textAlignment="center"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="#FFFFFFFF" />

        <Button
            android:id="@+id/abschicken"
            android:layout_width="175dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="250dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:text="Abschicken"
            android:textColor="#FFFFFFFF" />


    </LinearLayout>

</RelativeLayout>

</ScrollView>